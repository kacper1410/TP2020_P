<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="300">
    <Grid>
        <ListView Name="DepartmentsList" Height="400" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="15, 380,0,0">
            <Button Content="Add Department" Height="20" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="150, 380,0,0">
            <Button Content="Remove Department" Height="20" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="15, 435,0,0">
            <Button Content="Show details" Height="20" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="150, 435, 0, 0">
            <Button Content="Refresh" Height="20" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
